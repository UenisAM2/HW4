<h1><%= @place["name"] %>: My Entries</h1>

<div class="container">
  <div class="row">
    <% for entry in @entries %>
      <div class="col-lg-4 col-md-6 col-12 mb-4">
        <div class="card">
          <div class="card-body">
            <h3><%= entry["title"] %></h3>
            
            <% if entry.uploaded_image.attached? %>
            <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">                
            <%end%>
            
            <p><%= entry["occurred_on"] %></p>
            <p><%= entry["description"] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




<p class="nav-item">       
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Entry</a>
</p>

<p class="nav-item">       
  <a href="/places" class="btn btn-success">Back to All Places</a>
</p>
