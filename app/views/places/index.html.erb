<h1>Places</h1>

 <% @user = User.find_by({ "id" => session["user_id"] }) %>
 
  <% if @user == nil %>
      <p> Login first to see results </p>
         
    <% else %>
      <ul>
        <% for place in @places %>
        <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
        <% end %>
      </ul>
  

        <ul class="nav-item">
              <a href="/places/new/" class="btn btn-success">New place</a>
        </ul>
  <% end %>
 
